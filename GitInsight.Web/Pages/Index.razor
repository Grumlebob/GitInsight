@page "/"
@inject NavigationManager NavigationManager

<PageTitle>Index</PageTitle>

<h1>Welcome!</h1>

<form>
    <input type="text" @bind="@textInput" placeholder="user/GitRepo"/>
<button type="submit" @onclick="FindRepo" >Go</button>
</form>

@code {
    private string textInput;
    public void FindRepo()
    {
        if(textInput == "")
            return;

        NavigationManager.NavigateTo($"/{textInput}");
    }
}








